{
  "name": "chatapp",
  "displayName": "Chatapp",
  "version": "0.0.1",
  "description": "A basic Plasmo extension.",
  "author": "I.K.",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.7.6",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "path-browserify": "1.0.0",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3",
    "url": "0.11.0"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ]
  },
  "plasmo": {
    "name": "My Plasmo Extension",
    "permissions": [
      "tabs"
    ],
    "browser_field": false,
    "node_shims": {
      "fs": true,
      "path": true,
      "util": true,
      "url": true,
      "buffer": true,
      "process": true,
      "stream": true,
      "crypto": true,
      "events": true
    },
    "dependencies": {
      "sharp": {
        "external": true
      }
    }
  }
}
